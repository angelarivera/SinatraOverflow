<div id="inner-content-container">

  <article id=<%=@question.id%>>

  <!--UP VOTE QUESTION -->
    <form method="post" action='/questions/<%=@question.id%>/up_vote' class="up-vote">
          <button type="submit" name="submit_param" value="submit_value" id="upvote-button"></button>
    </form>

    <span id="vote_<%=@question.id%>" class='vote-count-post'><%=@question.total_votes%>
    </span>

  <!--DOWN VOTE QUESTION -->
    <form method="post" action='/questions/<%= @question.id %>/down_vote' class="down_vote">
      <button type="submit" name="submit_param" value="submit_value" id="downvote-button"></button>
    </form>

    <h2><%= @question.title %></h2>

    <div id="ask-question-button" role="navigation" label="ask question">
      <a href="/questions/new">Ask Question</a>
    </div>
  </article>

  <div id="question-description">
    <p>
      <%= @question.description %>
    </p>



  </div>

  <div id="question-comments" class="comments">
    <% @question.comments.each do |comment| %>
      <p>
        <%=comment.description%>
      </p>
      <p>
        <span class='user_id'><%comment.user_id %></span>
        <span class='timestamp'><%comment.created_at %></span> <!-- ??? how -->
      </p>
    <% end %>
  </div>
    <span>  <a href="/questions/:id/comments">New Comment</a></span>

  <div id="answers">
    <% @answers.each do |answer| %>

        <%= erb :'_answers', locals: {answer: answer} %>

    <% end %>
  </div>


      <h4>Have an answer?</h4>
        <form action='/questions/<%=@question.id%>/answers' method='post' class='new-answer'>
          <input type="text" name="description" placeholder="enter answer here:">
          <input type="submit" value="submit">
        </form>
</div>